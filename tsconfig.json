{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],  // Key: Include Cypress types
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["cypress/*"]
    },
    "typeRoots": ["./node_modules/@types", "./cypress/support"]
  },
  "include": ["**/*.ts", "**/*.tsx", "cypress/support/*.d.ts"],
  "exclude": ["node_modules"]
}