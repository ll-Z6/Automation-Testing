{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["cypress/*"]
    },
    "typeRoots": ["./node_modules/@types", "./cypress/support"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "cypress/e2e/**/*.ts",
    "cypress/e2e/**/*.tsx",
    "cypress/api/**/*.ts",
    "cypress/api/**/*.tsx",
    "cypress/support/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "results"
  ]
}