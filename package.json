{
  "name": "cypress-automation-project",
  "version": "1.0.0",
  "description": "Cypress automation project with TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:ui": "cypress open",
    "test:functional": "cypress run --config-file cypress.config.functional.ts",
    "test:performance": "cypress run --config-file cypress.config.performance.ts",
    "test:all": "npm run test:functional && npm run test:performance",
    "test:saucedemo": "cypress run --spec \"cypress/e2e/saucedemo/**\"",
    "test:petstore": "cypress run --spec \"cypress/e2e/petstore/**\"",
    "test:ci": "cypress run --browser chrome --reporter junit --reporter-options 'mochaFile=results/test-results.[hash].xml,toConsole=true'",
    "test:mochawesome": "cypress run --browser chrome --reporter mochawesome --reporter-options reportDir=results,overwrite=false,html=false,json=true",
    "report:merge": "npx mochawesome-merge results/*.json > results/merged-report.json",
    "report:generate": "npx marge results/merged-report.json -f report -o results",
    "report:functional": "npx mochawesome-merge results/functional/*.json > results/functional/merged-report.json && npx marge results/functional/merged-report.json -f functional-report -o results/functional",
    "report:performance": "npx mochawesome-merge results/performance/*.json > results/performance/merged-report.json && npx marge results/performance/merged-report.json -f performance-report -o results/performance"
  },
  "keywords": [
    "cypress",
    "automation",
    "testing",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.0.4",
    "cypress": "^14.5.0",
    "cypress-multi-reporters": "^2.0.5",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.2",
    "mochawesome-report-generator": "^6.2.0",
    "typescript": "^5.8.3"
  }
}
